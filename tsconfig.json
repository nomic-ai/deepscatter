{
  "compilerOptions": {
    "declaration": true,
    // "lib": ["es2020"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "isolatedModules": true
  },
  "include": [
    "./src/*"
  ],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
