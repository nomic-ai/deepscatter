{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ],
  "compilerOptions": {
    "declarationMap": true,
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "isolatedModules": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmitOnError": false,
    "emitDeclarationOnly": true,
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}